@model PagedList.IPagedList<DiscountCatalog.Common.WebApiModels.WebApiManager>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "GetAllDeletedManagers";
}

<h2>All deleted managers</h2>



@if (Model != null && Model.Count() != 0)
{
    using (Html.BeginForm("GetAllDeletedManagers", "StoreAdmin", FormMethod.Get))
    {
        <p>
            Find by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
            <input type="submit" value="Search" />
        </p>
    }

    <table class="table">
        <tr>
            <th>
                @Html.ActionLink("UserName", "GetAllDeletedManagers", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                FirstName
            </th>
            <th>
                LastName
            </th>
            <th>
                Email
            </th>
            <th>
                PhoneNumber
            </th>
            <th>
                StoreAdminName
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            if (item.Deleted)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StoreAdminName)
                    </td>
                    <td>
                        @Html.ActionLink("Restore", "RestoreManager", new { id = item.Id })
                    </td>
                </tr>
            }

        }

    </table>
}
else
{
    <p class="text-danger">- No deleted managers</p>
}

@Html.ActionLink("All managers", "GetAllManagers")

<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("GetAllDeletedManagers",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
