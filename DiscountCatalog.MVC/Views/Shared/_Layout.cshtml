<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/jqueryui/css")
    @Styles.Render("~/Content/IndividualPageStyles/Common")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/moment")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/FlashMessage")
    @Scripts.Render("~/Scripts/IndividualPageScripts/Common")
    @Scripts.Render("~/bundles/jqueryui")
</head>
<body>

    @{
        Html.RenderPartial("_Flash");
        Html.RenderPartial("_HeaderNavBar");
    }

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Ivan Lazić</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)

</body>
</html>
