@model PagedList.IPagedList<AbatementHelper.CommonModels.WebApiModels.WebApiStore>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "GetAllStores";
}


<h2>All stores</h2>

@if (Model != null && Model.Count() != 0)
{
    using (Html.BeginForm("GetAllStores", "Manager", FormMethod.Get))
    {
        <p>
            Find by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
            <input type="submit" value="Search" />
        </p>
    }

    <table class="table">
        <tr>
            <th>
                @Html.ActionLink("StoreName", "GetAllStores", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                WorkingHoursWeek
            </th>
            <th>
                WorkingHoursWeekends
            </th>
            <th>
                WorkingHoursHolidays
            </th>
            <th>
                Country
            </th>
            <th>
                City
            </th>
            <th>
                PostalCode
            </th>
            <th>
                Street
            </th>
            <th>
                Approved
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StoreName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkingHoursWeek)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkingHoursWeekends)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkingHoursHolidays)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Street)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Approved)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditStore", new { id = item.Id })
                    @Html.ActionLink("Details", "DetailsStore", new { id = item.Id })
                    @Html.ActionLink("Abandon", "AbandonStore", new { id = item.Id })
                    @Html.ActionLink("Select", "Select", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}
else
{
    <p class="text-danger">- No stores</p>
}

<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("GetAllStores",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))

